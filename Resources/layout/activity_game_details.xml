<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/content_main"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_marginTop="60dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="100dp"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:text="NULL"
                        android:layout_marginStart="10dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:text="Text 1"
                        android:layout_marginStart="10dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:text="Text 2"
                        android:layout_marginStart="10dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:text="Text 3"
                        android:layout_marginStart="10dp"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:text="Text 4"
                        android:layout_marginStart="10dp"/>
                </TableRow>
            </TableLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TableRow
                        android:id="@+id/headerRow"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                            <TextView
                        android:layout_width="50dp"
                        android:layout_height="150dp"
                        android:text="Header 1"
                        android:layout_marginStart="10dp"/>
                            <TextView
                        android:layout_width="50dp"
                        android:layout_height="150dp"
                        android:text="Header 2"
                        android:layout_marginStart="10dp"/>
                            <TextView
                        android:layout_width="50dp"
                        android:layout_height="150dp"
                        android:text="Header 3"
                        android:layout_marginStart="10dp"/>
                            <TextView
                        android:layout_width="50dp"
                        android:layout_height="150dp"
                        android:text="Header 4"
                        android:layout_marginStart="10dp"/>
                            <TextView
                        android:layout_width="50dp"
                        android:layout_height="150dp"
                        android:text="Header 5"
                        android:layout_marginStart="10dp"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                            <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="Content 1"
                        android:layout_marginStart="10dp"/>
                            <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="Content 2"
                        android:layout_marginStart="10dp"/>
                            <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="Content 3"
                        android:layout_marginStart="10dp"/>
                            <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="Content 4"
                        android:layout_marginStart="10dp"/>
                            <TextView
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text="Content 5"
                        android:layout_marginStart="10dp"/>
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <!--<Button
        android:id="@+id/roundScoreButton"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Button"
        app:layout_constraintTop_toTopOf="@+id/guideline" />-->

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="75dp" />

</androidx.constraintlayout.widget.ConstraintLayout>