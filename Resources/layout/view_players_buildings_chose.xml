        android:id="@+id/player4HighestPurchasePriceNumericUpDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <AlhambraScoringAndroid.UI.ScoreLineNumberView
        android:id="@+id/player5HighestPurchasePriceNumericUpDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
