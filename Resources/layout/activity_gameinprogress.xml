<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameInProgressActivity">

    <include
        android:id="@+id/include"
        layout="@layout/content_main"
         />

    <AlhambraScoringAndroid.PlayerResultPanel
        android:id="@+id/playerResultPanel1"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
         />

    <AlhambraScoringAndroid.PlayerResultPanel
        android:id="@+id/playerResultPanel2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/playerResultPanel1"
         />

    <AlhambraScoringAndroid.PlayerResultPanel
        android:id="@+id/playerResultPanel3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/playerResultPanel2"
         />

    <AlhambraScoringAndroid.PlayerResultPanel
        android:id="@+id/playerResultPanel4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/playerResultPanel3"
         />

    <AlhambraScoringAndroid.PlayerResultPanel
        android:id="@+id/playerResultPanel5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/playerResultPanel4"
         />

    <AlhambraScoringAndroid.PlayerResultPanel
        android:id="@+id/playerResultPanel6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/playerResultPanel5"
        />

    <Button
        android:id="@+id/roundScoreButton"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>